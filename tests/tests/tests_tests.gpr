with "config/tests_tests_config.gpr";
with "config/tests_tests_list_config.gpr";

project Tests_Tests is
   for Source_Dirs use ("src/**", "common/", "config/");
   for Object_Dir use "obj/" & Tests_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use Tests_Tests_List_Config.Test_Files;

   package Compiler is
      for Default_Switches ("Ada") use
        Tests_Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;
end Tests_Tests;
